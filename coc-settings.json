{
  "json.enable": true,
  "json.format.enable": true,
  "python.linting.enabled": true,
  "python.formatting.provider": "black",
  "clangd.enabled": true,
  "cmake.cmakePath": "cmake",
  "cmake.lsp.enable": false,
  "prettier.enable": true,
  "prettier.disableLanguages": [],
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSave": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "json",
    "javascript",
    "typescript",
    "markdown",
    "vue",
    "python"
  ],
  "languageserver": {
    "cmake": {
      "command": "cmake-language-server",
      "filetypes": ["cmake"],
      "rootPatterns": ["build/"],
      "initializationOptions": {
        "buildDirectory": "build"
      }
    },
    "python": {
      "command": "python3",
      "filetypes": ["python"],
      "settings": {
        "plugins": {
          "mccabe": {
            "enabled": true,
            "threshold": 15
          },
          "preload": {
            "enabled": true
          },
          "pycodestyle": {
            "enabled": true
          },
          "pydocstyle": {
            "enabled": false,
            "match": "(?!test_).*\\.py",
            "matchDir": "[^\\.].*"
          },
          "pyflakes": {
            "enabled": true
          },
          "rope_completion": {
            "enabled": true
          },
          "black": {
            "enable": true
          }
        }
      }
    }
  },
  "volar.takeOverMode.enabled": true,
  "tsserver.enable": true,
  "java.enabled": false,
  "java.jdt.ls.home": "/Users/alexrain/yyh/yyh_code/java/jdt-language-server",
  "yank.highlight.enable": true,
  "yank.highlight.duration": 500
}
